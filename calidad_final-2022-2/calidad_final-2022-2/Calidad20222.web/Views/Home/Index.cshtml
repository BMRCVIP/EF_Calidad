@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <h1 class="display-4">Welcome Poker Game</h1>
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <div class="container-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Cartas</th>
                                                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Numero @item.Palo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <h1>Jugada: @ViewBag.Jugada</h1>
                </div>
                <form action="/home/generar" method="post">
                    <button class="btn btn-primary">Generar Jugada</button>
                </form>
            </div>
            <div class="col">

                 <div class="text-center fw-bold">
                    <thead>
                        <tr>
                            <th>Cartas   -----   Palo</th>
                            <hr/>
                        </tr>
                    </thead>
                </div>
                <div id="CartasPalos">
                    <div class="text-center">
                        <form action="/home/generar_1" method="post">
                            <tr>
                                <th><input name="Primera" id="CARTA1"> </input></th>
                                <th><input name="PrimerPalo" id="Palo1"> </input></th>
                                <br />
                                <th><input name="Segunda" id="CARTA2"> </input></th>
                                <th><input name="SegundoPalo" id="Palo12"> </input></th>
                                <br />
                                <th><input name="Tercera" id="CARTA3"> </input></th>
                                <th><input name="TercerPalo" id="Palo13"> </input></th>
                                <br />
                                <th><input name="Cuarta" id="CARTA4"> </input></th>
                                <th><input name="CuartoPPalo" id="Palo14"> </input></th>
                                <br />
                                <th><input name="Quinta" id="CARTA5"> </input></th>
                                <th><input name="QuintoPalo" id="Palo15"> </input></th>
                            </tr>
                            <br />
                            <br><button class="btn btn-primary" id="botonCarta">Registrar Carta</button></br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>      
</div>